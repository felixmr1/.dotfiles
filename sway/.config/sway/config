# swaynag error message handler
# TODO: move this
swaynag_command $nag -R

### Variables
include config.d/variables.conf

### Key Bindnings conf
include config.d/keybindnings.conf

### Input conf
include config.d/keyboard.conf

### Modes
include config.d/modes.conf

## Output conf
include config.d/output.conf

# Lock screen
# TODO: add this script and move rule, alternative find another way of locking screen
bindsym ctrl+alt+l exec ~/bin/idle.sh lock

# TODO: move these
#
# Window rules
#
assign [class="discord"]    workspace 6
assign [class="Slack"]    workspace 6
assign [class="Steam"]    workspace 4

for_window [class="Rofi"] floating enable
for_window [class="Steam"] floating enable

# Activate correct workspaces
workspace 1
workspace 6

# Autostart apps
exec sleep 3 && dex --autostart --search-paths $HOME/.config/autostart/ --term alacritty

# TODO: Move to autostart?
exec $HOME/.local/bin/sunpaper.sh -c && $HOME/.local/bin/sunpaper.sh

# Theming
